$font-serif = 'Roboto Slab', serif

$font-size-factor = 1.125
$font-size-m = 1em
$line-height = 1.45

$font-size-s = $font-size-m / $font-size-factor
$font-size-xs = $font-size-s / $font-size-factor
$font-size-xxs = $font-size-xs / $font-size-factor

$font-size-l = $font-size-m * $font-size-factor
$font-size-xl = $font-size-l * $font-size-factor
$font-size-xxl = $font-size-xl * $font-size-factor
$font-size-xxxl = $font-size-xxl * $font-size-factor

html
  font-size 16px
  +above(m)
    font-size 20px

body
  // color palette('text')
  font-family $font-serif
  font-weight 400
  font-size $font-size-m
  line-height $line-height


p, ul, ol, pre
  margin-top 0
  margin-bottom 1.3em

li
  margin-bottom 0.65em

h1, h2, h3, h4, h5, h6
  margin 1.414em 0 0.5em
  // color palette('text', 'bold')
  font-family $font-serif
  font-weight 400
  line-height 1.2

h1
  margin-top 0
  font-size $font-size-xxxl

h2
  font-size $font-size-xxl

h3
  font-size $font-size-xl

h4
  font-size $font-size-l

h5
  font-size $font-size-m

h6
  font-size $font-size-s


small
  font-size $font-size-s

b, strong
  // color palette('text', 'bold')
  font-weight 700
