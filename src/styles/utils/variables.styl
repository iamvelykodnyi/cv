/// ============================================================================
/// Palette
/// ============================================================================
$color-primary = #3498db
$color-accent = #e74c3c
$color-clouds =   #ecf0f1
$color-silver =   #bdc3c7
$color-concrete = #95a5a6
$color-asbestos = #7f8c8d
$color-gray = {
  g50:  #fafafa,
  g100: #f5f5f5,
  g200: #eeeeee,
  g300: #e0e0e0,
  g400: #bdbdbd,
  g500: #9e9e9e,
  g600: #757575,
  g700: #616161,
  g800: #424242,
  g900: #212121,
}

$palette-colors = {
  primary: {
    base: $color-primary,
    l: tint($color-primary, 20%),
    d: shade($color-primary, 20%)
  },
  accent: {
    base: $color-accent,
    l: tint($color-accent, 20%),
    d: shade($color-accent, 20%)
  },
  text: {
    base: $color-gray.g700,
    secondary: $color-gray.g600,
    title: $color-gray.g800,
    bold: $color-gray.g900,
    divider: $color-gray.g400,
  },
  bg: {
    base: $color-gray.g50,
    colouds: $color-gray.g100,
    silver: $color-gray.g200
  }
}

/// ============================================================================
/// fonts
/// ============================================================================
$font-serif = 'Roboto Slab', serif
$font-size-factor = 1.125
$font-size-m = 1em
$line-height = 1.45
$font-weight = 400
$font-weight-bold = 700

$font-size-s = $font-size-m / $font-size-factor
$font-size-xs = $font-size-s / $font-size-factor
$font-size-xxs = $font-size-xs / $font-size-factor

$font-size-l = $font-size-m * $font-size-factor
$font-size-xl = $font-size-l * $font-size-factor
$font-size-xxl = $font-size-xl * $font-size-factor
$font-size-xxxl = $font-size-xxl * $font-size-factor

/// ============================================================================
/// Rupture breakpoints
